[ -f "$HOME/.profile" ] && . "$HOME/.profile" 
[ "$XDG_SESSION_TYPE" = "x11" -a -f "$HOME/.xinitrc" ] && . "$HOME/.xinitrc"
case "$0" in
    -*)
        set -o emacs
        set bell-style none
        shopt -s autocd
        export CLICOLOR=1
        export PS1='\u@\h:\[\e[34m\]\w\[\e[0m\]\n\$ '
        ;;
esac

if [ -z "$DISPLAY" ] && [ "$(tty)" = "/dev/tty1" ]; then
    exec sway
fi
