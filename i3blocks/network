#!/bin/sh
if nmcli -t -f TYPE,STATE device | grep -q '^wifi:connected'; then 
    wifi_info=$(nmcli -t -f active,ssid,signal dev wifi | grep '^yes' | cut -d: -f2-)
    echo "ğŸŒ $wifi_info%"
elif nmcli -t -f TYPE,STATE device | grep -q '^ethernet:connected'; then 
    echo "ğŸŒ Ethernet"
else 
    echo "ğŸš« NoNet"
fi
